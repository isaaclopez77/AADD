<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imgReceta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvParte1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgReceta"
        android:layout_toEndOf="@+id/imgReceta" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvParte2"
        android:layout_below="@+id/tvParte1"
        android:layout_toRightOf="@+id/imgReceta"
        android:layout_toEndOf="@+id/imgReceta"
        android:layout_alignBottom="@+id/imgReceta" />
</RelativeLayout>